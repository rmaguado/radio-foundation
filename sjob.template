source $HOME/.conda_rc
conda activate dino2t24
cd $HOME/projects/radio-foundation
export PYTHONPATH=.

srun python3 ${PYTHONPATH}/dinov2/train/train.py --config-file="$PWD/configs/$CONF.yaml" --output-dir="$PWD/runs/$CONF"
