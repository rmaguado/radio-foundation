#!/bin/bash

#SBATCH --job-name=$CONF

#SBATCH --nodes=$NODES
#SBATCH --ntasks-per-node=4
#SBATCH --gres=gpu:L40S:$GPUS
#SBATCH --cpus-per-task=16
#SBATCH --nodelist=compute-cuda-0$W

#SBATCH --mem=96GB
#SBATCH --partition=odap-gpu
